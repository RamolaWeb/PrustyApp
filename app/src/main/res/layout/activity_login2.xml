<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tominc.prustyapp.LoginActivity">


    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:id="@+id/login_items"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="60dp"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="QUAD"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_email_layout"
            android:layout_centerInParent="true"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_email"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_password_layout"
            android:layout_below="@id/input_email_layout"
            android:layout_width="match_parent"
            android:textColorHint="@color/white"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:textColor="@color/white"
                android:id="@+id/input_password"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/login_submit"
            android:layout_below="@id/input_password_layout"
            android:text="Login"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/login_register"
            android:layout_below="@id/login_submit"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:text="No Account Yet? Create one"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/login_skip"
            android:layout_below="@id/login_register"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            android:text="Skip Login"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <include
        android:id="@+id/logging_in"
        android:visibility="gone"
        layout="@layout/logging_in_layout" />

</RelativeLayout>
